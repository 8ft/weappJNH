/**app.wxss**/
page{
  font-size:30rpx;
  color: #666666;
  background: #F2F2F2;
}

input{
  outline:none;
  border:none;
  list-style: none;
}

button{
  -webkit-appearance: none;
  background: #fff;
  padding: 0;
  margin:0;
}
button::after{
  border:none;
}

.input-placeholder{
  color:#CCCCCC;
}

.clearfix{
  overflow: hidden;
  zoom:1;
}

.arrow-right{
  position: relative;
  padding-right: 27rpx;
}
.arrow-right::before,.arrow-right::after{
  position:absolute;
  content:'';
  width:0;
  height:0;
  top:50%;
  margin-top:-12rpx;
  border:12rpx solid transparent;
}
.arrow-right::before{
  right:0;
  border-right:0;
  border-left-color:#666666;
}
.arrow-right::after{
  right:3rpx;
  border-right:0;
  border-left-color:#fff;
}

.border-b{
  border-bottom: 1px solid rgba(229,229,229,.5);
}
.border-t{
  border-top: 1px solid rgba(229,229,229,.5);
}

.topFloor{
  z-index: 10;
}
.middleFloor{
  z-index: 9;
}
.bottomFloor{
  z-index: 8;
}