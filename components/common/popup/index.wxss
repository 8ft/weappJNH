/* components/common/popup/index.wxss */
.popup,.modal{
   transition:all .3s;
  -webkit-transition:all .3s;
}

.popup{
  position: fixed;
  top:0;
  left:0;
  width:100%;
  z-index: 9;
}
.popup.hide{
  transform: translateY(-100%);
}

.modal{
  position: fixed;
  top:0;
  left:0;
  width:100%;
  height: 100%;
  background:rgba(0,0,0,.5);
  z-index: 8;
}
.modal.hide{
  display: none;
}