/* components/tabs/tabs.wxss */

.yt-tabs{
  position: relative;
  display:flex;
  align-items: center;
  border-bottom:1px solid rgba(229,229,229,.5);
  height:100rpx; 
  padding:10rpx;
  line-height: 80rpx;
  background:#fff;
  box-sizing:border-box;
  font-size:28rpx;
  color:#666666;
}

.yt-tabs.fixed{
  position:fixed;
  top:0;
  left:0;
  right:0;
  z-index: 9999;
}

.yt-tab{
  flex:1;
  text-align: center;
}

.yt-tab text{
  display: inline-block;
  height: 100%;
  transition:all .3s;
  -webkit-transition:all .3s;
}

.yt-tab text.active{
  color:black;
  transform: scale(1.2);
  -webkit-transform: scale(1.2);
}

.yt-tab-underline{
  position:absolute;
  left:0;
  bottom:0rpx;
  border-bottom:6rpx solid black;
}