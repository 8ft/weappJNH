/* pages/expert/index/index.wxss */

page{
  box-sizing: border-box;
  background:linear-gradient(0deg,rgba(104,196,255,1),rgba(0,131,255,1)) no-repeat;
  background-size: 100% 200rpx;
  padding: 40rpx 30rpx;
}

.base-info{
  position: relative;
  box-sizing: border-box;
  width:100%;
  padding: 48rpx 30rpx 30rpx;
  background:rgba(255,255,255,1);
  box-shadow:0rpx 3rpx 20rpx 0rpx rgba(0, 0, 0, 0.15);
  border-radius:12rpx;
  margin: 0 auto;
}
.base-info .avatar{
  position: absolute;
  width:128rpx;
  height:128rpx;
  border-radius:50%;
  top:48rpx;
  right:30rpx;
}
.base-info .name{
  font-size: 40rpx;
  color:#333333;
  font-weight:500;
}
.base-info .price,.base-info .p-title{
  line-height: 74rpx;
}
.base-info .price{
  color:#FF5E2C;
  font-size: 30rpx;
  margin-right: 20rpx;
}
.base-info .p-title{
  color: #333333;
  font-size: 24rpx;
}

.base-info .info{
  display: inline-block;
  font-size: 22rpx;
  color:#999999;
  margin-bottom: 21rpx;
  margin-right: 24rpx;
}
.base-info .city{
  display: block;
}

.title{
  display: flex;
  align-items: center;
  font-size: 58rpx;
  color:#333333;
  font-family:Georgia;
  margin: 60rpx 0 30rpx;
}
.title view{
  font-family:PingFangSC-Regular;
  font-size: 28rpx;
  line-height: 28rpx;
  margin-left: 5rpx;
}
.title text{
  font-family:PingFangSC-Regular;
  display: block;
  font-size: 20rpx;
  line-height: 20rpx;
  margin-left: 5rpx;
}

.intro{
  font-size: 28rpx;
  line-height: 44rpx;
  color: #666666;
}

.sub-title{
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 24rpx;
}

.tag{
  display: inline-block;
  padding:0 18rpx;
  font-size: 24rpx;
  line-height: 50rpx;
  background: #F5F5F5;
  color:#999999;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.works{
  position: relative;
  padding-left:272rpx;
  padding-bottom: 40rpx;
  margin-bottom: 40rpx;
}
.works image{
  width:240rpx;
  height: 170rpx;
  position: absolute;
  left:0;
  top:0;
}
.works .name{
  width:100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color:#333333;
  font-size: 32rpx;
  font-weight:600;
}
.works .desc{
  display: block;
  color:#666666;
  font-size: 24rpx;
  line-height:36rpx;
  margin:13rpx 0 21rpx;
}
.works .type{
  color:#999999;
  font-size: 22rpx;
}
.works .iconfont{
  font-size: 22rpx;
  margin-right: 12rpx;
}
.works .link{
  display: inline-block;
  position: absolute;
  right:0;
  bottom:40rpx;
  background:#E5F2FF;
  border-radius: 20rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  color:#0083FF;
  font-size: 22rpx;
  padding:0 20rpx;
}

