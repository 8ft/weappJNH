page {
  box-sizing: border-box;
  background: linear-gradient(0deg, #68c4ff, #0083ff) no-repeat;
  background-size: 100% 200rpx;
  padding: 40rpx 30rpx;
}
.base-info {
  position: relative;
  box-sizing: border-box;
  width: 100%;
  padding: 48rpx 30rpx 30rpx;
  background: #ffffff;
  box-shadow: 0rpx 3rpx 20rpx 0rpx rgba(0, 0, 0, 0.15);
  border-radius: 12rpx;
  margin: 0 auto;
}
.base-info .iconfont {
  color: #CCCCCC;
  font-size: 22rpx;
  margin-right: 8rpx;
}
.base-info .avatar {
  position: absolute;
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  top: 48rpx;
  right: 30rpx;
}
.base-info .name {
  font-size: 40rpx;
  color: #333333;
  font-weight: 500;
  display: flex;
  align-items: center;
}
.base-info .price,
.base-info .base-info .p-title {
  line-height: 74rpx;
}
.base-info .price {
  color: #ff5e2c;
  font-size: 30rpx;
  margin-right: 20rpx;
}
.base-info .p-title {
  color: #333;
  font-size: 24rpx;
}
.base-info .info {
  display: inline-block;
  font-size: 22rpx;
  color: #999999;
  margin-bottom: 21rpx;
  margin-right: 24rpx;
}
.base-info .city {
  display: block;
}
.name .iconfont {
  font-size: 30rpx;
  margin-left: 16rpx;
}
.iconfont.icon-xingbienv {
  color: #ff8686;
}
.iconfont.icon-xingbienan {
  color: #0083FF;
}
.title {
  display: flex;
  align-items: center;
  font-size: 58rpx;
  color: #333333;
  font-family: Georgia;
  margin: 60rpx 0 30rpx;
}
.title view {
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  line-height: 28rpx;
  margin-left: 5rpx;
}
.title text {
  font-family: PingFangSC-Regular;
  display: block;
  font-size: 20rpx;
  line-height: 20rpx;
  margin-left: 5rpx;
}
.intro {
  font-size: 28rpx;
  line-height: 44rpx;
  color: #666;
}
.sub-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 24rpx;
}
.tag {
  display: inline-block;
  padding: 0 18rpx;
  font-size: 24rpx;
  line-height: 50rpx;
  background: #f5f5f5;
  color: #999999;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
.works {
  position: relative;
  padding-left: 272rpx;
  padding-bottom: 40rpx;
  margin-bottom: 40rpx;
}
.works image {
  width: 240rpx;
  height: 170rpx;
  position: absolute;
  left: 0;
  top: 0;
}
.works .name {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #333333;
  font-size: 32rpx;
  font-weight: 600;
}
.works .desc {
  display: block;
  color: #666666;
  font-size: 24rpx;
  line-height: 36rpx;
  margin: 13rpx 0 21rpx;
}
.works .type {
  color: #999999;
  font-size: 22rpx;
}
.works .iconfont {
  font-size: 22rpx;
  margin-right: 12rpx;
}
.works .link {
  display: inline-block;
  position: absolute;
  right: 0;
  bottom: 40rpx;
  background: #e5f2ff;
  border-radius: 20rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  color: #0083FF;
  font-size: 22rpx;
  padding: 0 20rpx;
}
