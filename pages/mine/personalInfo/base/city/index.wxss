.hot {
  padding: 30rpx 40rpx;
  background: #fff;
}
.hot view {
  color: #999999;
  margin-bottom: 30rpx;
}
.hot text {
  display: inline-block;
  padding: 22rpx 33rpx;
  font-size: 24rpx;
  color: #333333;
  font-weight: 400;
  background: #f5f5f5;
  margin-right: 40rpx;
  margin-bottom: 24rpx;
}
.sep {
  text-indent: 40rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  color: #999999;
}
.list {
  background: #fff;
  padding-left: 60rpx;
  position: relative;
  margin-bottom: 10rpx;
}
.list .letter {
  position: absolute;
  top: 0rpx;
  left: 40rpx;
  line-height: 100rpx;
  color: #0083FF;
}
.locate {
  position: fixed;
  right: 0;
  top: 0;
  height: 100%;
  width: 80rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  z-index: 1;
}
.locate view {
  font-size: 24rpx;
  color: #0083FF;
  width: 100%;
  box-sizing: border-box;
  padding-right: 15rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
}
