page {
  background: #3b3e51;
}
.card {
  position: relative;
  width: 690rpx;
  padding-bottom: 118rpx;
  background: #fff;
  margin: 30rpx auto;
  box-sizing: border-box;
  border-radius: 8rpx;
  font-size: 32rpx;
  color: #999;
}
.ball {
  position: absolute;
  top: 100rpx;
  left: -20rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: #3b3e51;
}
.ball.right {
  left: auto;
  right: -20rpx;
}
.time {
  height: 129rpx;
  line-height: 129rpx;
  color: #333;
  text-align: center;
  background: #f2f2f2;
  border-radius: 8rpx;
}
.money {
  height: 280rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.money .num {
  margin-top: 50rpx;
  line-height: 76rpx;
  font-size: 76rpx;
  color: #333;
  font-weight: 500;
  font-family: PingFangSC-Medium;
}
.info {
  padding: 31rpx 39rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 118rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  line-height: 48rpx;
  color: #999;
}
.info view {
  flex: 1;
  padding-left: 96rpx;
  text-align: right;
  color: #333;
  white-space: pre-wrap;
}
