<!--pages/project/detail/index.wxml-->

<view class='state-zone' wx:if="{{isMyProject&&applyUsers}}">
  <view>雇佣并付款</view>
  <text>有专家申请你的项目了，快去选择心仪的TA。</text> 
  <image src="/assets/img/project/detail/zmzj.png"></image>
</view>

<view class='part' style="padding-bottom:0;">
  <view class='name'>{{detail.projectName}}
    <view class='state' wx:if="{{detail.projectStateCn}}">{{detail.projectStateCn}}</view>
  </view>
  <text class='price'>{{detail.projectBudgetCn}}</text>
  <text class='lead-times'>{{detail.projectCycleCn}}</text>
  <view class='hot'>
    <text class='applied' wx:if="{{!isMyProject}}">已申请：{{detail.applyNum}}</text>
    <text class='read'>已浏览：{{detail.viewNum}}</text>
  </view>

  <navigator class='applyUsers arrow-right' hover-class='none' wx:if="{{isMyProject&&applyUsers}}" url="/pages/expert/applicant/index?id={{detail.id}}">
    <text>申请的专家</text>
    <view>
      <image wx:for="{{applyUsers.list}}" src="{{item.userAvatar}}"></image>
    </view>
    <text wx:if="{{applyUsers.count>3}}">等{{applyUsers.count}}人</text>
  </navigator>
</view>

<view class='part apply-info' wx:if="{{detail.projectState==4}}">
  <view class='title'>我的申请信</view>
  <view class='offer'>我的报价：{{applyInfo.projectOffer}}</view>
  <text decode='true'>{{applyInfo.applyDesc}}</text>
</view>

<view class='part base'>
  <view class='title'>基本信息</view>
  <view><text class="iconfont icon-xiaochengxukaifa"></text><text>{{detail.projectSubtypeCn}}</text></view>
  <view wx:if="{{detail.projectSkillCn}}"><text class="iconfont icon-Html"></text><text>{{detail.projectSkillCn}}</text></view>
  <view wx:if="{{detail.companyName}}"><text class="iconfont icon-gongsi"></text><text>{{detail.companyName}}</text></view>
  <view><text class="iconfont icon-qingxiang"></text><text>{{detail.cooperaterCn}}</text></view>
  <view><text class="iconfont icon-shijian"></text><text>{{detail.createTime}}发布</text></view>
</view>

<view class='part desc'>
  <view class='title'>项目描述</view>
  <text decode='true'>{{detail.projectDesc}}</text>
  <block wx:if="{{detail.fileBatchNo}}">
    <image class='desc-img' wx:if="{{imgs.length>0}}" wx:for="{{imgs}}" src="{{item.url}}" data-url="{{item.url||''}}" bindtap='preview'></image>
    <view wx:if="{{docs.length>0}}" wx:for="{{docs}}" data-index="{{index}}" data-url="{{item.url}}" bindtap="viewFile"><text class="iconfont icon-wendang"></text>{{item.fileName}}</view>
  </block>
</view>

<view class='action-bar' wx:if="{{detail.projectState==2&&!isMyProject}}">
  <button class='btn' bindtap='apply'>发送申请</button>
</view>
