/* pages/project/detail/index.wxss */
page{
  padding-bottom:151rpx;
}

.state-zone{
  position: relative;
  padding:66rpx 40rpx 54rpx;
  background:linear-gradient(254deg,rgba(57,157,251,1),rgba(50,118,253,1));
}
.state-zone view{
  color:#F8F8F8;
  font-size: 32rpx;
  margin-bottom: 24rpx;
}
.state-zone text{
  color:#AED6FD;
  font-size: 24rpx;
}
.state-zone image{
  width:220rpx;
  height: 114rpx;
  position: absolute;
  bottom:27rpx;
  right:0;
}

.part{
  padding:0 40rpx 37rpx;
  position: relative;
  background: #fff;
  margin-bottom:22rpx;
}

.name,.price{display: block;font-size:40rpx;}
.name{
  color:#333333;
  padding:54rpx 0 0;
  line-height: 40rpx;
  display: flex;
  align-items: center;
}
.state{
  line-height: 32rpx;
  padding:0 10rpx;
  text-align: center;
  font-size: 22rpx;
  color:#fff;
  background:#02B18E;
  border-radius: 99rpx;
  margin-left: 10rpx;
}
.price{
  color:#FC5B32;
  line-height: 38rpx;
  padding:28rpx 0;
}
.lead-times{
  display: block;
  font-size: 28rpx;
  line-height: 26rpx;
  color: #666666;
  padding-bottom:37rpx;
}
.hot{
  position:absolute;
  right:40rpx;
  top:187rpx;
  font-size: 24rpx;
  line-height: 26rpx;
  color:#999999;
}
.applied{
  margin-right:20rpx;
  padding-right:20rpx;
  display: inline-block;
  line-height: 17rpx;
  border-right:1px solid rgba(204,204,204,1);
}

.applyUsers{
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color:#333;
  height: 110rpx;
}
.applyUsers view{
  flex: 1;
  text-align: right;
}
.applyUsers image{
  width:60rpx;
  height: 60rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}

.title{
  line-height: 78rpx;
  color:#333333;
  border-bottom: 1px solid rgba(229,229,229,.5);
  margin-bottom:46rpx;
}

.base view{
  display: flex;
  align-items: center;
}
.base view:not(.title){
  font-size:28rpx;
  color:#999999;
  margin-top:26rpx;
}
.base image{
  width:26rpx;
  height: 26rpx;
  margin-right: 22rpx;
}

.desc text{
  color:#666666;
}

.desc-img{
  display: block;
  width:100%;
  margin-top: 20rpx;
}

.file-icon{
  width: 26rpx;
  height: 28rpx;
  margin-right: 10rpx;
}

.desc view{
  color:#333333;
  font-size: 28rpx;
  margin-top: 37rpx;
}

.action-bar{
  position: fixed;
  background:#fff;
  bottom:0;
  left:0;
  right:0;
  width:100%;
  height: 150rpx;
  border-top:1px solid rgba(229,229,229,.5);
  display: flex;
  align-items: center;
}
.action-bar .btn{
  margin:0 auto;
  width:630rpx;
  height:96rpx;
  background:rgba(0,131,255,1);
  border-radius:4rpx;
  color:#fff;
  font-size: 32rpx;
  line-height: 96rpx;
  text-align: center;
}

