/* pages/project/publish/desc/index.wxss */
page{
  background: #fff;
}
textarea{
  width:100%;
  box-sizing: border-box;
  padding: 24rpx 40rpx;
  background: #fff;
  line-height: 48rpx;
}

.placeholder{
  position: absolute;
  font-size:28rpx;
  font-weight: 400;
  top:34rpx;
  left:40rpx;
  right:40rpx;
  color:#ccc;
}

.imgs{
  position: absolute;
  left:0;
  bottom:120rpx;
  display: flex;
  box-sizing: border-box;
  padding:0 40rpx;
  height: 156rpx;
}

.img{
  width:156rpx;
  height: 100%;
  margin-right:40rpx;
  position: relative;
}
.img image{
  width: 100%;
  height: 100%;
}
.img .del{
  position: absolute;
  top:-15rpx;
  right:-15rpx;
  width:30rpx;
  height: 30rpx;
  line-height: 30rpx;
  background: rgb(219, 218, 218);
  color:#fff;
  text-align: center;
  border-radius: 50%;
}

.imgs .add{
  width:156rpx;
  background: #F2F2F2;
  color:#999999;
  height: 100%;
  display: flex;
  align-items: center;
}
.imgs .add view{
  margin:0 auto;
  font-size: 24rpx;
  margin-top: 10rpx;
  text-align: center;
}
.imgs .add view::before{
  content:'+';
  display: block;
  width:50rpx;
  height: 50rpx;
  font-size: 30rpx;
  border:1px solid #999999;
  line-height: 50rpx;
  border-radius: 50%;
  text-align: center;
  margin:0 auto;
}

.demo-switch,.num{
  position: absolute;
  height: 30rpx;
  line-height: 30rpx;
  bottom:45rpx;
  font-size:28rpx;
  color:#666666;
}

.demo-switch{
  left:40rpx;
}

.num{
  right:40rpx;
}

.demo{
  position: fixed;
  width:100%;
  height:100%;
  top:0;
  left:0;
  z-index:3;
  background: rgba(0,0,0,.5);
  display: flex;
  align-items: center;
}
.box{
  margin:0 auto;
}
.con{
  width:645rpx;
  box-sizing: border-box;
  padding: 32rpx 42rpx;
  background: #fff;
  border-radius: 16rpx;
}
.con cover-view{
  display: block;
}
.title{
  text-align: center;
  font-size:32rpx;
  color:#333333;
}
.sub-title{
  position: relative;
  margin-top:40rpx;
  margin-bottom:10rpx;
  color:#333333;
  line-height: 30rpx;
}
.p{
  font-size:28rpx;
  color:#666666;
  line-height: 48rpx;
  white-space:pre-line;
}
.hide-demo{
  border:1px solid #fff;
  background:transparent;
  border-radius: 50%;
  width:60rpx;
  line-height: 54rpx;
  font-size:32rpx;
  margin:42rpx auto 0;
  color:#fff;
}