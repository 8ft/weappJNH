page {
  background: #fff;
  padding: 0 40rpx;
  box-sizing: border-box;
}
.info {
  display: flex;
  align-items: center;
  padding: 46rpx 0 42rpx;
  border-bottom: 1rpx solid rgba(229, 229, 229, 0.5);
}
.types {
  display: block;
  border-bottom: none;
  margin-top: 30rpx;
}
.types .name {
  display: block;
  margin-bottom: 30rpx;
}
.type {
  float: left;
  width: 126rpx;
  height: 126rpx;
  background: #f5f5f5;
  text-align: center;
  padding-top: 20rpx;
  box-sizing: border-box;
}
.type:nth-of-type(n+2) {
  margin-left: 55rpx;
}
.type.active {
  background: #0083ff;
  color: #fff;
}
.type .iconfont {
  font-size: 50rpx;
  height: 50rpx;
}
.type text {
  font-size: 24rpx;
}
.name {
  font-size: 32rpx;
  color: #666;
}
.info.need .name::after {
  content: '*';
  color: red;
  font-size: 40rpx;
}
.input {
  margin-left: 20rpx;
  min-height: 32rpx;
  flex: 1;
  text-align: right;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.arrow-right::before {
  border-left-color: #ccc;
}
.action-bar {
  background: #fff;
  width: 100%;
  height: 150rpx;
  display: flex;
  align-items: center;
}
.action-bar button {
  margin: 0 auto;
  width: 630rpx;
  height: 96rpx;
  background: #0083ff;
  border-radius: 4rpx;
  color: #fff;
  font-size: 32rpx;
  line-height: 96rpx;
}
